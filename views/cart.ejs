<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Cart</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/app.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body class="bg-page">
  <%- include('partials/navbar', { active: 'cart', user }) %>

  <main class="app-main">
    <div class="container">
      <h2 class="mb-3">Shopping Cart</h2>

      <% if (error && error.length) { %>
        <div class="alert alert-danger"><%= error[0] %></div>
      <% } %>
      <% if (success && success.length) { %>
        <div class="alert alert-success"><%= success[0] %></div>
      <% } %>

      <% if (!cart || cart.length === 0) { %>
        <div class="card shadow-sm">
          <div class="card-body text-center py-5">
            <p class="mb-2 fs-5">Your cart is currently empty.</p>
            <p class="text-muted mb-3">Browse our selection of fresh groceries to get started.</p>
            <a href="/shopping" class="btn btn-primary">Start Shopping</a>
          </div>
        </div>
      <% } else { %>
        <div class="card shadow-sm mb-3">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
              <div>
                <h5 class="mb-0">Items in your cart</h5>
                <small class="text-muted">
                  Select the items you want to checkout. You can update quantities or remove items.
                </small>
              </div>
            </div>
          </div>

          <div class="table-responsive">
            <table class="table table-modern align-middle mb-0">
              <thead>
                <tr>
                  <th scope="col" style="width: 40px;"></th>
                  <th scope="col">Product</th>
                  <th scope="col" class="text-center">Image</th>
                  <th scope="col" class="text-end">Price</th>
                  <th scope="col" class="text-center">Quantity</th>
                  <th scope="col" class="text-end">Subtotal</th>
                  <th scope="col" class="text-center">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% let total = 0; %>
                <% for (let i = 0; i < cart.length; i++) { %>
                  <tr>
                    <td>
                      <input
                        type="checkbox"
                        class="form-check-input item-select"
                        data-price="<%= cart[i].price %>"
                        data-qty="<%= cart[i].cart_quantity || cart[i].quantity || 0 %>"
                        data-product-id="<%= cart[i].productId %>"
                        checked
                      >
                    </td>
                    <td><strong><%= cart[i].productName %></strong></td>
                    <td class="text-center">
                      <img src="/images/<%= cart[i].image %>"
                           alt="<%= cart[i].productName %>"
                           style="width: 60px; height: 60px; object-fit: cover;">
                    </td>
                    <td class="text-end">
                      $<%= cart[i].price.toFixed(2) %>
                    </td>
                    <td>
                      <form action="/cart/update/<%= cart[i].productId %>"
                            method="POST"
                            class="d-flex justify-content-center gap-2">
                        <input
                          type="number"
                          name="quantity"
                          min="1"
                          max="<%= cart[i].stock %>"
                          value="<%= cart[i].cart_quantity || cart[i].quantity || 0 %>"
                          class="form-control form-control-sm text-center"
                          style="max-width: 80px;"
                        >
                        <button type="submit" class="btn btn-sm btn-outline-primary">Update</button>
                      </form>
                      <div class="text-center mt-1">
                        <small class="text-muted-xs">In stock: <%= cart[i].stock %></small>
                      </div>
                    </td>
                    <td class="text-end">
                      <% const lineTotal = (Number(cart[i].price || 0) * Number(cart[i].cart_quantity || cart[i].quantity || 0)); %>
                      $<%= lineTotal.toFixed(2) %>
                      <% total += lineTotal; %>
                    </td>
                    <td class="text-center">
                      <form action="/cart/remove/<%= cart[i].productId %>"
                            method="POST"
                            onsubmit="return confirm('Remove this item from your cart?');">
                        <button type="submit" class="btn btn-sm btn-outline-danger">Remove</button>
                      </form>
                    </td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>

          <div class="card-body border-top">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
              <h4 class="mb-0">
                Total: $<span id="selected-total"><%= total.toFixed(2) %></span>
              </h4>
              <div class="d-flex gap-2">
                <a href="/shopping" class="btn btn-outline-secondary">Continue Shopping</a>

                <!-- Checkout selected -->
                <form id="checkout-form" action="/cart/checkout" method="POST">
                  <input type="hidden" name="selectedProductIds" id="selectedProductIds">
                  <button type="submit" class="btn btn-success">
                    Checkout Selected
                  </button>
                </form>

                <!-- Clear entire cart -->
                <form action="/cart/clear" method="POST"
                      onsubmit="return confirm('Clear all items from your cart?');">
                  <button type="submit" class="btn btn-outline-danger">
                    Clear Cart
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </main>

  <!-- JS: update total based on selected checkboxes -->
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const checkboxes   = document.querySelectorAll('.item-select');
      const totalSpan    = document.getElementById('selected-total');
      const checkoutForm = document.getElementById('checkout-form');
      const selectedInput = document.getElementById('selectedProductIds');

      function recalcTotal() {
        let sum = 0;
        checkboxes.forEach(cb => {
          if (!cb.checked) return;
          const price = parseFloat(cb.dataset.price || '0');
          const qty   = parseFloat(cb.dataset.qty   || '0');
          sum += price * qty;
        });
        if (totalSpan) {
          totalSpan.textContent = sum.toFixed(2);
        }
      }

      // Recalculate whenever user ticks/unticks an item
      checkboxes.forEach(cb => {
        cb.addEventListener('change', recalcTotal);
      });

      // When user clicks "Checkout", send only selected product IDs
      if (checkoutForm && selectedInput) {
        checkoutForm.addEventListener('submit', function (e) {
          const selectedIds = [];
          const rows = document.querySelectorAll('tbody tr');

          rows.forEach(row => {
            const cb = row.querySelector('.item-select');
            if (cb && cb.checked) {
              const productId = cb.dataset.productId;
              if (productId) {
                selectedIds.push(productId);
              }
            }
          });

          if (selectedIds.length === 0) {
            e.preventDefault();
            alert('Please select at least one item to checkout.');
            return;
          }

          selectedInput.value = selectedIds.join(',');
        });
      }

      // Initial calculation
      recalcTotal();
    });
  </script>
</body>
</html>
