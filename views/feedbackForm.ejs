<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= order ? 'Rate Your Order' : 'Leave Feedback' %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/app.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <style>
    body {
      background-color: #f8f9fa;
    }
  </style>
</head>
<body>
  <!-- Navbar (same pattern as shopping.ejs / cart.ejs) -->
  <%- include('partials/navbar', { active: 'feedback' }) %>

  <div class="container mt-4">
    <div class="row justify-content-center">
      <div class="col-md-6">

        <!-- Flash messages (same style as cart.ejs) -->
        <% if (error && error.length) { %>
          <div class="alert alert-danger"><%= error[0] %></div>
        <% } %>
        <% if (success && success.length) { %>
          <div class="alert alert-success"><%= success[0] %></div>
        <% } %>

        <div class="card shadow-sm">
          <div class="card-header">
            <h5 class="mb-0">
              <% if (order) { %>
                Rate Order #<%= order.id %>
              <% } else { %>
                Leave General Feedback
              <% } %>
            </h5>
          </div>

          <div class="card-body">
            <% if (order) { %>
              <p class="small text-muted mb-3">
                Reference:
                <strong><%= order.referenceId %></strong><br>
                Total:
                $<%= parseFloat(order.total).toFixed(2) %>
              </p>
            <% } %>

            <form method="post" action="<%= order ? ('/orders/' + order.id + '/feedback') : '/feedback/new' %>">
              <!-- Rating -->
              <div class="mb-3">
                <label for="rating" class="form-label">Rating (1â€“5)</label>
                <select id="rating" name="rating" class="form-select" required>
                  <% 
                    const currentRating = existingFeedback ? existingFeedback.rating : null;
                    for (let r = 1; r <= 5; r++) { 
                  %>
                    <option value="<%= r %>" <%= currentRating === r ? 'selected' : '' %>><%= r %></option>
                  <% } %>
                </select>
              </div>

              <!-- Comment -->
              <div class="mb-3">
                <label for="comment" class="form-label">Feedback</label>
                <textarea
                  id="comment"
                  name="comment"
                  class="form-control"
                  rows="4"
                  placeholder="Tell us about your experience"
                ><%= existingFeedback ? existingFeedback.comment : '' %></textarea>
              </div>

              <button type="submit" class="btn btn-primary">
                <%= existingFeedback ? 'Update Feedback' : 'Submit Feedback' %>
              </button>

              <% if (order) { %>
                <a href="/orders/<%= order.id %>" class="btn btn-link">Back to Order</a>
              <% } else { %>
                <a href="/feedback" class="btn btn-link">Back to Feedback List</a>
              <% } %>
            </form>
          </div>
        </div>

      </div>
    </div>
  </div>

</body>
</html>
