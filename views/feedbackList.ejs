<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Feedback</title>
  <link href="/css/app.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  
</head>
<body>
  <% if (user && user.role === 'admin') { %>
    <%- include('partials/admin-modern-navbar', { user: user, active: 'feedback' }) %>
  <% } else { %>
    <%- include('partials/navbar', { active: 'feedback' }) %>
  <% } %>

  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h3 class="mb-0">Customer Feedback</h3>
      <% if (user && user.role !== 'admin') { %>
        <a href="/feedback/new" class="btn btn-primary btn-sm">Leave General Feedback</a>
      <% } %>
    </div>

    <% if (error && error.length) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <% if (success && success.length) { %>
      <div class="alert alert-success"><%= success %></div>
    <% } %>

    <% if (!feedbackList || feedbackList.length === 0) { %>
      <div class="alert alert-info">No feedback yet.</div>
    <% } else { %>

      <!-- Search / Filter / Sort -->
      <div class="row mb-3">
        <div class="col-md-4 mb-2">
          <input id="feedbackSearch" type="text" class="form-control" placeholder="Search by user, order ref, or comment...">
        </div>
        <div class="col-md-3 mb-2">
          <select id="feedbackRatingFilter" class="form-select">
            <option value="">All ratings</option>
            <option value="5">5 ★</option>
            <option value="4">4 ★ &amp; up</option>
            <option value="3">3 ★ &amp; up</option>
            <option value="2">2 ★ &amp; up</option>
            <option value="1">1 ★ &amp; up</option>
          </select>
        </div>
        <div class="col-md-3 mb-2">
          <select id="feedbackSort" class="form-select">
            <option value="">Sort...</option>
            <option value="date-desc">Newest first</option>
            <option value="date-asc">Oldest first</option>
            <option value="rating-desc">Rating high → low</option>
            <option value="rating-asc">Rating low → high</option>
          </select>
        </div>
      </div>

      <div class="table-responsive">
        <table class="table table-striped align-middle">
          <thead>
            <tr>
              <th>#</th>
              <th>User</th>
              <th>Order Ref</th>
              <th>Rating</th>
              <th>Comment</th>
              <th>Date</th>
              <% if (user && user.role === 'admin') { %>
                <th>Action</th>
              <% } %>
            </tr>
          </thead>
          <tbody id="feedbackTableBody">
            <% feedbackList.forEach(function(fb, index) { %>
              <tr class="feedback-row"
                  data-user="<%= (fb.username || '').toLowerCase() %>"
                  data-order="<%= (fb.referenceId || '').toString().toLowerCase() %>"
                  data-rating="<%= fb.rating %>"
                  data-comment="<%= (fb.comment || '').toLowerCase() %>"
                  data-date="<%= new Date(fb.created_at).getTime() %>">
                <td><%= index + 1 %></td>
                <td><%= fb.username %></td>
                <td><%= fb.referenceId || '-' %></td>
                <td>
                  <% for (let i = 0; i < fb.rating; i++) { %>★<% } %>
                  <% for (let i = fb.rating; i < 5; i++) { %>☆<% } %>
                </td>
                <td><%= fb.comment || '' %></td>
                <td><%= new Date(fb.created_at).toLocaleString() %></td>

                <% if (user && user.role === 'admin') { %>
                  <td>
                    <form method="post"
                          action="/admin/feedback/<%= fb.id %>/delete"
                          onsubmit="return confirm('Delete this feedback?');">
                      <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                  </td>
                <% } %>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
  (function() {
    const searchInput = document.getElementById('feedbackSearch');
    const ratingSelect = document.getElementById('feedbackRatingFilter');
    const sortSelect   = document.getElementById('feedbackSort');
    const tbody        = document.getElementById('feedbackTableBody');
    if (!tbody) return;

    const rows = Array.from(tbody.querySelectorAll('.feedback-row'));

    function applyFilter() {
      const term   = (searchInput && searchInput.value ? searchInput.value.toLowerCase() : '');
      const rating = parseInt(ratingSelect && ratingSelect.value ? ratingSelect.value : '0', 10);

      rows.forEach(function(row) {
        const user    = row.dataset.user || '';
        const orderId = row.dataset.order || '';
        const comment = row.dataset.comment || '';
        const r       = parseInt(row.dataset.rating || '0', 10);

        const matchText =
          !term ||
          user.includes(term) ||
          orderId.includes(term) ||
          comment.includes(term);

        const matchRating = !rating || r >= rating;

        row.style.display = (matchText && matchRating) ? '' : 'none';
      });
    }

    function applySort() {
      const value = sortSelect && sortSelect.value;
      if (!value) return;

      const parts = value.split('-');
      const key = parts[0];
      const dir = parts[1];

      const visible = rows.filter(function(r) { return r.style.display !== 'none'; });

      visible.sort(function(a, b) {
        let av, bv;

        if (key === 'date') {
          av = parseInt(a.dataset.date || '0', 10);
          bv = parseInt(b.dataset.date || '0', 10);
        } else { // rating
          av = parseInt(a.dataset.rating || '0', 10);
          bv = parseInt(b.dataset.rating || '0', 10);
        }

        if (av < bv) return dir === 'asc' ? -1 : 1;
        if (av > bv) return dir === 'asc' ? 1 : -1;
        return 0;
      });

      visible.forEach(function(r) { tbody.appendChild(r); });
    }

    if (searchInput) {
      searchInput.addEventListener('input', applyFilter);
    }
    if (ratingSelect) {
      ratingSelect.addEventListener('change', applyFilter);
    }
    if (sortSelect) {
      sortSelect.addEventListener('change', applySort);
    }
  })();
  </script>
</body>
</html>
