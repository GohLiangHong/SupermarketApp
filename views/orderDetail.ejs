<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Order Receipt</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="/css/app.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background-color: #f4f4f4;
    }

    .receipt-wrapper {
      max-width: 420px;
      margin: 30px auto;
    }

    .receipt-paper {
      background: #ffffff;
      border: 1px solid #ddd;
      padding: 20px 18px;
      font-size: 0.9rem;
      box-shadow: 0 0 8px rgba(0,0,0,0.1);
    }

    .receipt-header h5 {
      margin: 0;
      font-weight: 700;
      letter-spacing: 1px;
    }

    .receipt-header p {
      margin: 0;
      font-size: 0.8rem;
      line-height: 1.2;
    }

    .receipt-meta {
      font-size: 0.8rem;
    }

    .receipt-section-title {
      font-weight: 600;
      font-size: 0.85rem;
      margin-top: 10px;
      margin-bottom: 4px;
    }

    .receipt-line {
      border-top: 1px dashed #999;
      margin: 8px 0;
    }

    .items-table {
      width: 100%;
      font-size: 0.85rem;
    }

    .items-table th,
    .items-table td {
      padding: 2px 0;
    }

    .items-table th {
      border-bottom: 1px solid #ccc;
      font-weight: 600;
    }

    .totals-table {
      width: 100%;
      font-size: 0.85rem;
    }

    .totals-table td {
      padding: 2px 0;
    }

    .totals-table tr:last-child td {
      border-top: 1px solid #000;
      font-weight: 700;
      padding-top: 4px;
    }

    .footer-text {
      font-size: 0.75rem;
      text-align: center;
      margin-top: 10px;
    }

    @media print {
      body {
        background-color: #ffffff;
      }
      nav,
      .navbar,
      .no-print {
        display: none !important;
      }
      .receipt-wrapper {
        margin: 0 auto;
      }
      .receipt-paper {
        box-shadow: none;
        border: none;
      }
    }
  </style>
</head>
<body>
  <!-- Navbar (same style as your other pages) -->
  <%- include('partials/navbar', { active: 'orders' }) %>
    <!-- rest of your receipt content -->

  <div class="container mt-3">

    <% if (error && error.length) { %>
      <div class="alert alert-danger no-print"><%= error[0] %></div>
    <% } %>
    <% if (success && success.length) { %>
      <div class="alert alert-success no-print"><%= success[0] %></div>
    <% } %>

    <div class="receipt-wrapper">
      <!-- Print button -->
      <div class="d-flex justify-content-between align-items-center mb-2 no-print">
        <h4 class="mb-0">Order Receipt</h4>
        <button class="btn btn-secondary btn-sm" onclick="window.print()">Print</button>
      </div>

      <div class="receipt-paper">

        <!-- Store header (NTUC-style) -->
        <div class="receipt-header text-center mb-2">
          <h5>SUPERMARKET APP</h5>
          <p>
            123 Sample Street<br>
            Singapore 123456<br>
            Tel: +65 6123 4567
          </p>
        </div>

        <div class="receipt-line"></div>

        <!-- Order meta -->
        <div class="receipt-meta mb-2">
          <div class="d-flex justify-content-between">
            <span>Receipt No:</span>
            <span><%= order.referenceId %></span>
          </div>
          <div class="d-flex justify-content-between">
            <span>Order ID:</span>
            <span><%= order.id %></span>
          </div>
          <div class="d-flex justify-content-between">
            <span>Date:</span>
            <span><%= order.createOn %></span>
          </div>
          <div class="d-flex justify-content-between">
            <span>Payment:</span>
            <span><%= order.paymentMode %></span>
          </div>
          <div class="d-flex justify-content-between">
            <span>Status:</span>
            <span><%= order.status %></span>
          </div>
        </div>

        <div class="receipt-line"></div>

        <!-- Customer info -->
        <div>
          <div class="receipt-section-title">Customer</div>
          <div class="receipt-meta">
            <div><strong><%= order.customer.username %></strong></div>
            <div><%= order.customer.contact %></div>
            <div><%= order.customer.email %></div>
            <div><%= order.customer.address %></div>
          </div>
        </div>

        <div class="receipt-line"></div>

        <!-- Items -->
        <div>
          <div class="receipt-section-title">Items</div>
          <% if (!order.items || !order.items.length) { %>
            <div class="receipt-meta">No items found for this order.</div>
          <% } else { %>
            <table class="items-table">
              <thead>
                <tr>
                  <th style="width: 50%;">Item</th>
                  <th class="text-end" style="width: 15%;">Qty</th>
                  <th class="text-end" style="width: 15%;">Price</th>
                  <th class="text-end" style="width: 20%;">Amount</th>
                </tr>
              </thead>
              <tbody>
                <% for (let i = 0; i < order.items.length; i++) { %>
                  <tr>
                    <td><%= order.items[i].product_name %></td>
                    <td class="text-end"><%= order.items[i].quantity %></td>
                    <td class="text-end">
                      $<%= parseFloat(order.items[i].unit_price).toFixed(2) %>
                    </td>
                    <td class="text-end">
                      $<%= parseFloat(order.items[i].subtotal).toFixed(2) %>
                    </td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          <% } %>
        </div>

        <div class="receipt-line"></div>

        <!-- Totals -->
        <div class="mt-1">
          <table class="totals-table">
            <tr>
              <td>Subtotal</td>
              <td class="text-end">
                $<%= parseFloat(order.subtotal).toFixed(2) %>
              </td>
            </tr>
            <tr>
              <td>Tax</td>
              <td class="text-end">
                $<%= parseFloat(order.tax).toFixed(2) %>
              </td>
            </tr>
            <tr>
              <td>Shipping</td>
              <td class="text-end">
                $<%= parseFloat(order.shipping_fee).toFixed(2) %>
              </td>
            </tr>
            <tr>
              <td>Discount</td>
              <td class="text-end">
                -$<%= parseFloat(order.discount).toFixed(2) %>
              </td>
            </tr>
            <tr>
              <td>Total</td>
              <td class="text-end">
                $<%= parseFloat(order.total).toFixed(2) %>
              </td>
            </tr>
          </table>
        </div>

        <div class="receipt-line"></div>

        <!-- Footer -->
        <div class="footer-text">
          Thank you for shopping with us!<br>
          Goods sold are non-refundable.
        </div>

      </div>

            <!-- Back + Feedback buttons (not printed) -->
      <div class="mt-3 text-center no-print">
        <a href="/orders/<%= order.id %>/feedback" class="btn btn-outline-secondary btn-sm me-2">
          Rate this Order
        </a>
        <a href="/shopping" class="btn btn-primary btn-sm">Back to Shopping</a>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
