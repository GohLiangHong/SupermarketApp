<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Update Product â€“ Supermarket Admin</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Bootstrap + app.css -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/app.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body class="bg-page">

  <!-- Admin Navbar -->
  <%- include('partials/admin-modern-navbar', { user: user, active: 'inventory' }) %>

  <main class="app-main">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-7 col-xl-6">
          <div class="card shadow-sm">
            <div class="card-body">

              <h3 class="card-title mb-3">Update Product</h3>

              <% if (!product) { %>
                <p class="text-center mb-0">No product found.</p>
              <% } else { %>
                <p class="text-muted small mb-4">
                  Update the details for <strong><%= product.productName %></strong>.
                </p>

                <!-- Flash messages WITHOUT empty lines -->
                <% if (typeof error !== 'undefined' && error && error.length > 0) { %>
                  <div class="alert alert-danger py-2 mb-3"><%= error %></div>
                <% } %>

                <% if (typeof success !== 'undefined' && success && success.length > 0) { %>
                  <div class="alert alert-success py-2 mb-3"><%= success %></div>
                <% } %>

                <form action="/updateProduct/<%= product.id %>"
                      method="POST"
                      enctype="multipart/form-data">

                  <!-- Keep existing image if no new one is uploaded -->
                  <input type="hidden" name="currentImage" value="<%= product.image %>">

                  <div class="row g-3">

                    <!-- Product Name -->
                    <div class="col-12">
                      <label for="name" class="form-label">Product Name</label>
                      <input type="text"
                             class="form-control"
                             id="name"
                             name="name"
                             value="<%= product.productName %>"
                             required>
                    </div>

                    <!-- Quantity -->
                    <div class="col-md-6">
                      <label for="quantity" class="form-label">Quantity</label>
                      <input type="number"
                             class="form-control"
                             id="quantity"
                             name="quantity"
                             min="0"
                             step="1"
                             value="<%= product.quantity %>"
                             required>
                    </div>

                    <!-- Price -->
                    <div class="col-md-6">
                      <label for="price" class="form-label">Price ($)</label>
                      <input type="number"
                             class="form-control"
                             id="price"
                             name="price"
                             min="0"
                             step="0.01"
                             value="<%= product.price %>"
                             required>
                    </div>

                    <!-- Image Section -->
                    <div class="col-12">
                      <label class="form-label d-block">Current Image</label>

                      <img src="/images/<%= product.image %>"
                           alt="Current image"
                           class="img-thumbnail mb-2"
                           style="max-width: 160px;">

                      <div class="text-muted small mb-2">
                        You can upload a new image to replace this.
                      </div>

                      <label for="image" class="form-label">Upload New Image</label>
                      <input class="form-control"
                             type="file"
                             id="image"
                             name="image"
                             accept="image/*">
                    </div>

                  </div>

                  <!-- Buttons -->
                  <div class="d-grid gap-2 mt-4">
                    <button type="submit" class="btn btn-primary">Update Product</button>
                    <a href="/inventory" class="btn btn-secondary">Back to Inventory</a>
                  </div>

                </form>
              <% } %>

            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

</body>
</html>
