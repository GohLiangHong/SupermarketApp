<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Wallet Top Up - Stripe</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="/css/app.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-page">
  <%- include('partials/navbar', { active: 'wallet', user }) %>

  <div class="container mt-4" style="max-width: 720px;">
    <div class="card shadow-sm">
      <div class="card-body">
        <h4 class="mb-2">Top Up with Stripe</h4>
        <p class="text-muted mb-3">
          Amount: <strong>$<%= Number(amount || 0).toFixed(2) %></strong> â€¢ Transaction #<%= txId %>
        </p>

        <% if (error && error.length) { %>
          <div class="alert alert-danger mt-3 mb-0"><%= error[0] %></div>
        <% } %>
        <% if (success && success.length) { %>
          <div class="alert alert-success mt-3 mb-0"><%= success[0] %></div>
        <% } %>

        <div class="alert alert-info mt-3">
          You will be redirected to Stripe Checkout to complete payment securely.
        </div>

        <button id="payBtn" class="btn btn-success w-100">Proceed to Stripe Checkout</button>
        <a href="/wallet" class="btn btn-outline-secondary w-100 mt-2">Cancel</a>

        <div id="errBox" class="alert alert-danger mt-3 d-none"></div>
      </div>
    </div>
  </div>

  <script>
    (function () {
      const payBtn = document.getElementById('payBtn');
      const errBox = document.getElementById('errBox');
      const txId = <%- JSON.stringify(txId || null) %>;

      function showErr(msg) {
        errBox.textContent = msg;
        errBox.classList.remove('d-none');
      }

      payBtn.addEventListener('click', async function () {
        if (!txId) {
          showErr('Invalid top up transaction.');
          return;
        }

        payBtn.disabled = true;
        errBox.classList.add('d-none');

        try {
          const resp = await fetch('/api/stripe/wallet/create-checkout-session', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            credentials: 'same-origin',
            body: JSON.stringify({ txId })
          });

          const data = await resp.json();
          if (!resp.ok) throw new Error(data.error || 'Failed to start Stripe payment');

          window.location.href = data.url;
        } catch (e) {
          showErr(e.message || 'Something went wrong');
          payBtn.disabled = false;
        }
      });
    })();
  </script>
</body>
</html>
